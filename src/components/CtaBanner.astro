          rel="noopener noreferrer"
          class="group inline-flex items-center gap-3 bg-[#25D366] text-white px-10 py-5 text-sm uppercase tracking-widest font-sans font-bold hover:bg-[#20BD5A] transition-all duration-300 hover:shadow-lg hover:shadow-[#25D366]/20 w-full sm:w-auto justify-center"
        >
