<section id="agendar" class="relative py-24 md:py-32 bg-brand-navy overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-brand-gold rounded-full blur-[120px]"></div>
    <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-brand-gold rounded-full blur-[100px]"></div>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      
      <!-- Overline -->
      <p class="text-brand-gold font-sans text-xs tracking-[0.4em] uppercase mb-6 font-medium">
        Agende sua consulta
      </p>

      <!-- Headline -->
      <h2 class="font-serif text-4xl md:text-6xl lg:text-7xl text-white leading-[0.95] mb-8">
        O Primeiro Passo para 
        <span class="italic text-white/60">Viver Melhor</span>
      </h2>

      <!-- Subtext -->
      <p class="font-sans text-lg md:text-xl text-white/70 font-light leading-relaxed max-w-2xl mx-auto mb-12">
        Marque uma avaliação personalizada. Entenderemos suas queixas com profundidade para propor o tratamento mais eficaz.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-6">
        <!-- WhatsApp Primary CTA -->
        <a 
          href="https://wa.me/5561996044030?text=Olá,%20gostaria%20de%20agendar%20uma%20consulta%20com%20a%20Dra.%20Aliciane%20Mota."
