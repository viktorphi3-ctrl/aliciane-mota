<section class="relative min-h-screen flex items-center justify-center bg-brand-navy overflow-hidden">
  
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img 
      src="/hero-1920.webp"
      srcset="/hero-640.webp 640w, /hero-1024.webp 1024w, /hero-1920.webp 1920w"
      sizes="100vw"
      alt="Paisagem serena representando precisão e tranquilidade" 
      width="1920"
      height="1280"
      class="w-full h-full object-cover opacity-60"
      fetchpriority="high"
      decoding="async"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-brand-navy/90 via-brand-navy/40 to-brand-navy/90"></div>
  </div>

  <!-- Content -->
  <div class="container mx-auto px-6 relative z-10 text-center pt-28 md:pt-24 pb-32">
    <div class="max-w-4xl mx-auto space-y-8">
      
      <p class="text-brand-gold font-sans text-[10px] md:text-xs tracking-[0.4em] uppercase font-medium animate-fade-in-up">
        Excelência em Otorrinolaringologia
      </p>
      
      <h1 class="font-serif text-[2.5rem] leading-[1.05] md:text-7xl lg:text-8xl text-white md:leading-[0.95] tracking-tight drop-shadow-2xl">
        Dra. Aliciane Mota
      </h1>
      
      <p class="font-sans text-base md:text-xl text-white/75 max-w-2xl mx-auto leading-relaxed font-light tracking-wide drop-shadow-md px-2">
        Diagnósticos assertivos e tratamentos personalizados para restaurar seu sono e saúde integral.
      </p>

      <div class="pt-6">
         <a 
           href="#agendar" 
           class="inline-block bg-white/10 text-white border border-white/30 backdrop-blur-sm px-10 py-4 md:px-12 md:py-5 uppercase tracking-[0.25em] text-[11px] font-semibold hover:bg-brand-gold hover:text-white hover:border-brand-gold transition-all duration-300"
         >
           Agendar Consulta
         </a>
      </div>
    </div>
  </div>

  <!-- Subtle SVG Wave Transition -->
  <div class="absolute bottom-0 left-0 w-full z-20">
    <svg viewBox="0 0 1440 80" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" class="w-full h-[40px] md:h-[80px] block">
      <path d="M0,80 L0,40 Q360,0 720,40 Q1080,80 1440,40 L1440,80 Z" fill="#FDFBF7"/>
    </svg>
  </div>
</section>
