---
import { 
  CloudMoon, 
  Wind, 
  Orbit, 
  Stethoscope, 
  ThermometerSnowflake,
  Ear,
  Baby
} from 'lucide-react';

const services = [
  {
    title: "Medicina do Sono",
    description: "Tratamento especializado para ronco, apneia e insônia. Recupere a qualidade do seu sono e sua vitalidade diária.",
    icon: CloudMoon,
    highlight: true,
    size: "large" // Span 2 cols
  },
  {
    title: "Cirurgia Nasal",
    description: "Correção de desvio de septo e sinusite com técnicas minimamente invasivas.",
    icon: Wind,
    highlight: false,
    size: "normal"
  },
  {
    title: "Voz e Laringe",
    description: "Diagnóstico preciso e tratamento de rouquidão e lesões vocais.",
    icon: Stethoscope,
    highlight: false,
    size: "normal"
  },
  {
    title: "Otologia",
    description: "Cuidados especializados para zumbido, infecções e perda auditiva.",
    icon: Ear,
    highlight: false,
    size: "wide" // Span 2 cols
  },
  {
    title: "Otorrino Pediátrica",
    description: "Atendimento acolhedor para crianças: amígdalas, adenoides e otites.",
    icon: Baby,
    highlight: false,
    size: "normal"
  }
];
---

<section id="servicos" class="py-20 md:py-32 bg-surface-light relative z-10">
  <div class="container mx-auto px-6">
    
    <!-- Section Header similar to "Our Perspectives" -->
    <div class="mb-12 md:mb-20">
      <h2 class="font-serif text-4xl md:text-6xl text-brand-navy mb-6 md:mb-8">
        Áreas de <span class="text-brand-gold italic">Atuação</span>
      </h2>
      <div class="h-px w-24 bg-brand-gold/50"></div>
    </div>

    <!-- Bento Grid Layout -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 auto-rows-auto md:auto-rows-[400px]">
      
      {services.map((item, index) => {
        const Icon = item.icon;
        const colSpan = item.size === 'large' ? 'md:col-span-2' : item.size === 'wide' ? 'md:col-span-2' : '';
        const bgClass = item.highlight ? 'bg-brand-navy text-white' : 'bg-white text-brand-navy';
        const iconColor = item.highlight ? 'brand-gold' : 'brand-navy';

        return (
          <div class={`
            group relative p-8 md:p-10 rounded-[2.5rem] md:rounded-[3rem] shadow-sm hover:shadow-2xl hover:shadow-brand-navy/10 transition-all duration-500 hover:-translate-y-2 overflow-hidden flex flex-col justify-between border border-brand-navy/5
            ${colSpan} ${bgClass}
          `}>
             <!-- Decorative Background for Highlight Card -->
             {item.highlight && (
               <div class="absolute inset-0 z-0 opacity-20 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-brand-gold via-transparent to-transparent"></div>
             )}

             <div class="relative z-10">
               <div class={`mb-6 p-4 rounded-2xl w-fit ${item.highlight ? 'bg-white/10' : 'bg-brand-navy/5'} text-${iconColor}`}>
                 <Icon size={40} strokeWidth={1} class={item.highlight ? 'text-white' : 'text-brand-navy'} /> 
               </div>
               
               <h3 class={`font-serif text-3xl md:text-4xl mb-4 leading-tight ${item.highlight ? 'text-white' : 'text-brand-navy'}`}>
                 {item.title}
               </h3>
               
               <p class={`font-sans text-lg leading-relaxed ${item.highlight ? 'text-white/70' : 'text-text-main/70'}`}>
                 {item.description}
               </p>
             </div>

             <div class="relative z-10 pt-8">
               <a href="#agendar" class={`
                 inline-flex items-center text-xs uppercase tracking-widest font-bold border-b pb-1 transition-all
                 ${item.highlight ? 'border-white/30 hover:border-brand-gold text-white hover:text-brand-gold' : 'border-brand-navy/20 hover:border-brand-navy text-brand-navy'}
               `}>
                 Saiba Mais
               </a>
             </div>
          </div>
        )
      })}

    </div>
  </div>
</section>
